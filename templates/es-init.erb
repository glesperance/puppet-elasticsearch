#! /bin/sh
#
# Do not edit this file. It will be overwritten by puppet in the next run.
#
### BEGIN INIT INFO
# Provides:          elasticsearch
# Required-Start:    $all
# Required-Stop:     $all
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# Short-Description: Starts elasticsearch
# Description:       Starts elasticsearch using start-stop-daemon
### END INIT INFO

ES_HOME=<%= es_home_dir %>
ES_MIN_MEM=<%= es_min_mem %>
ES_MAX_MEM=<%= es_max_mem %>
DAEMON=$ES_HOME/bin/elasticsearch
NAME=elasticsearch
DESC=elasticsearch
PID_FILE=/var/run/$NAME.pid
LOG_DIR=<%= es_log_dir %>
DATA_DIR=<%= es_data_dir %>
WORK_DIR=<%= es_work_dir %>
CONFIG_FILE=<%= es_config_dir %>/elasticsearch.yml
DAEMON_OPTS="-p $PID_FILE -Des.config=$CONFIG_FILE -Des.path.home=$ES_HOME -Des.path.logs=$LOG_DIR -Des.path.data=$DATA_DIR -Des.path.work=$WORK_DIR"

test -x $DAEMON || exit 0

set -e

case "$1" in
	start)
		echo -n "Starting $DESC: "
		if start-stop-daemon --start --pidfile $PID_FILE --startas $DAEMON -- $DAEMON_OPTS
		then
			echo "started."
		else
			echo "failed."
		fi
		;;
	stop)
		echo -n "Stopping $DESC: "
		if start-stop-daemon --stop --pidfile $PID_FILE
		then
			echo "stopped."
		else
			echo "failed."
		fi
		;;
	restart|force-reload)
		${0} stop
		sleep 1
		${0} start
		;;
	*)
		N=/etc/init.d/$NAME
		echo "Usage: $N {start|stop|restart|force-reload}" >&2
		exit 1
		;;
esac

exit 0
